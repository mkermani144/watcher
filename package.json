{
  "name": "cardano-watcher",
  "version": "1.0.0",
  "description": "Watcher process for cardano bridge to ergo",
  "main": "index.js",
  "scripts": {
    "test": "mocha -r ts-node/register 'tests/**/*.ts' --slow 200",
    "coverage": "nyc npm run test",
    "start:dev": "nodemon",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migrate": "typeorm migration:create src/migrations/migration",
    "typeorm:generate": "rm -rf dist/ && tsc && typeorm migration:generate src/migrations/migration -d dist/config/ormconfig.js",
    "typeorm:run": "rm -rf dist/ && tsc && typeorm migration:run -d dist/config/ormconfig.js"
  },
  "repository": {
    "type": "git",
    "url": "git@git.ergopool.io:rozen-bridge/cardano-watcher.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "axios-mock-adapter": "^1.20.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@emurgo/cip14-js": "^3.0.1",
    "axios": "^0.26.1",
    "config": "^3.3.7",
    "ergo-lib-wasm-nodejs": "^0.15.0",
    "express": "^4.17.3",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.3.4"
  }
}
